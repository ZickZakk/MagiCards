<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/9">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New"/>
                        <MenuItem mnemonicParsing="false" text="Open…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Save"/>
                        <MenuItem mnemonicParsing="false" text="Save As…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferences…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Deck Side">
                    <items>
                        <CheckMenuItem mnemonicParsing="false" text="Front Side"/>
                        <CheckMenuItem mnemonicParsing="false" text="Back Side"/>
                        <CheckMenuItem mnemonicParsing="false" text="Left Side"/>
                        <CheckMenuItem mnemonicParsing="false" text="Right Side"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MagiCards"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <SplitPane dividerPositions="0.65" HBox.hgrow="ALWAYS">
                    <items>
                        <BorderPane>
                            <center>
                                <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
                                    <content>
                                        <VBox alignment="CENTER" fillWidth="false">
                                            <children>
                                                <StackPane
                                                        style="-fx-border-color: black; -fx-background-color: lightgrey;">
                                                    <children>
                                                        <ImageView fx:id="deckView" onMouseDragged="#interactWithImage"
                                                                   onMousePressed="#interactWithImage"
                                                                   pickOnBounds="true" preserveRatio="true"
                                                                   smooth="false" StackPane.alignment="CENTER">
                                                            <cursor>
                                                                <Cursor fx:constant="DEFAULT"/>
                                                            </cursor>
                                                        </ImageView>
                                                    </children>
                                                    <VBox.margin>
                                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                                    </VBox.margin>
                                                </StackPane>
                                            </children>
                                        </VBox>
                                    </content>
                                    <BorderPane.margin>
                                        <Insets left="5.0" right="5.0" top="5.0"/>
                                    </BorderPane.margin>
                                </ScrollPane>
                            </center>
                            <bottom>
                                <BorderPane BorderPane.alignment="CENTER">
                                    <left>
                                        <FlowPane alignment="CENTER_LEFT" hgap="10.0" BorderPane.alignment="CENTER">
                                            <children>
                                                <ColorPicker fx:id="colorPicker"
                                                             style="-fx-color-label-visible: false;">
                                                    <tooltip>
                                                        <Tooltip text="Pick drawing color"/>
                                                    </tooltip>
                                                </ColorPicker>
                                                <ToggleButton fx:id="drawToggleButton" mnemonicParsing="false">
                                                    <tooltip>
                                                        <Tooltip text="Draw"/>
                                                    </tooltip>
                                                    <graphic>
                                                        <FontAwesomeIcon iconName="PENCIL"/>
                                                    </graphic>
                                                </ToggleButton>
                                                <ToggleButton fx:id="eraseToggleButton" mnemonicParsing="false">
                                                    <tooltip>
                                                        <Tooltip text="Erase"/>
                                                    </tooltip>
                                                    <graphic>
                                                        <FontAwesomeIcon iconName="ERASER"/>
                                                    </graphic>
                                                </ToggleButton>
                                            </children>
                                            <BorderPane.margin>
                                                <Insets left="10.0"/>
                                            </BorderPane.margin>
                                        </FlowPane>
                                    </left>
                                    <right>
                                        <FlowPane alignment="CENTER_RIGHT" vgap="10.0" BorderPane.alignment="CENTER">
                                            <children>
                                                <Label text="Zoom:"/>
                                                <Slider fx:id="zoomSlider" blockIncrement="4.0" majorTickUnit="4.0"
                                                        max="9.0" min="1.0" showTickLabels="true" showTickMarks="true"
                                                        snapToTicks="true" value="3.0">
                                                    <FlowPane.margin>
                                                        <Insets left="5.0"/>
                                                    </FlowPane.margin>
                                                </Slider>
                                            </children>
                                            <BorderPane.margin>
                                                <Insets right="10.0" top="5.0"/>
                                            </BorderPane.margin>
                                        </FlowPane>
                                    </right>
                                </BorderPane>
                            </bottom>
                        </BorderPane>
                        <HBox>
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <BorderPane>
                                            <top>
                                                <Label alignment="CENTER" text="Shuffle History"
                                                       BorderPane.alignment="CENTER">
                                                    <padding>
                                                        <Insets bottom="5.0" top="5.0"/>
                                                    </padding>
                                                    <font>
                                                        <Font name="System Bold" size="19.0"/>
                                                    </font>
                                                </Label>
                                            </top>
                                            <center>
                                                <TableView fx:id="shuffleHistoryTable" BorderPane.alignment="CENTER">
                                                    <columns>
                                                        <TableColumn fx:id="shuffleHistoryNameColumn" editable="false"
                                                                     minWidth="5.0" prefWidth="-1.0" sortable="false"
                                                                     text="Name"/>
                                                        <TableColumn fx:id="shuffleHistoryTypeColumn" editable="false"
                                                                     minWidth="5.0" prefWidth="-1.0" sortable="false"
                                                                     text="Type"/>
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                    </columnResizePolicy>
                                                    <BorderPane.margin>
                                                        <Insets bottom="5.0" left="5.0"/>
                                                    </BorderPane.margin>
                                                </TableView>
                                            </center>
                                            <right>
                                                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                                                    <children>
                                                        <Button fx:id="addShuffleButton" mnemonicParsing="false"
                                                                onAction="#addNewShuffleToHistory">
                                                            <graphic>
                                                                <FontAwesomeIcon iconName="PLUS"/>
                                                            </graphic>
                                                            <tooltip>
                                                                <Tooltip text="Add"/>
                                                            </tooltip>
                                                        </Button>
                                                        <Button fx:id="renameShuffleButton" mnemonicParsing="false"
                                                                onAction="#renameShuffleHistoryEntry">
                                                            <graphic>
                                                                <FontAwesomeIcon iconName="FONT"/>
                                                            </graphic>
                                                            <tooltip>
                                                                <Tooltip text="Rename"/>
                                                            </tooltip>
                                                            <VBox.margin>
                                                                <Insets top="5.0"/>
                                                            </VBox.margin>
                                                        </Button>
                                                        <Button fx:id="upShuffleButton" mnemonicParsing="false"
                                                                onAction="#moveUpShuffleHistoryEntry">
                                                            <graphic>
                                                                <FontAwesomeIcon iconName="ARROW_UP"/>
                                                            </graphic>
                                                            <tooltip>
                                                                <Tooltip text="Up"/>
                                                            </tooltip>
                                                            <VBox.margin>
                                                                <Insets top="5.0"/>
                                                            </VBox.margin>
                                                        </Button>
                                                        <Button fx:id="downShuffleButton" mnemonicParsing="false"
                                                                onAction="#moveDownShuffleHistoryEntry">
                                                            <graphic>
                                                                <FontAwesomeIcon iconName="ARROW_DOWN"/>
                                                            </graphic>
                                                            <tooltip>
                                                                <Tooltip text="Down"/>
                                                            </tooltip>
                                                            <VBox.margin>
                                                                <Insets top="5.0"/>
                                                            </VBox.margin>
                                                        </Button>
                                                        <Button fx:id="removeShuffleButton" mnemonicParsing="false"
                                                                onAction="#removeShuffleHistoryEntry">
                                                            <graphic>
                                                                <FontAwesomeIcon iconName="TIMES"/>
                                                            </graphic>
                                                            <tooltip>
                                                                <Tooltip text="Remove"/>
                                                            </tooltip>
                                                            <VBox.margin>
                                                                <Insets top="5.0"/>
                                                            </VBox.margin>
                                                        </Button>
                                                    </children>
                                                    <BorderPane.margin>
                                                        <Insets left="5.0" right="5.0"/>
                                                    </BorderPane.margin>
                                                </VBox>
                                            </right>
                                        </BorderPane>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </items>
                </SplitPane>
            </children>
        </HBox>
    </children>
</VBox>
